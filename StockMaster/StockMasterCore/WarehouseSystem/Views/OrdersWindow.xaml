<UserControl x:Class="WarehouseApp.Views.OrdersWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок и кнопки -->
        <StackPanel Grid.Row="0" Margin="10">
            <TextBlock Text="Управление заказами" FontSize="20" FontWeight="Bold"/>
            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <Button Content="Обновить" Command="{Binding RefreshCommand}" Margin="0,0,10,0"/>
                <Button Content="Загрузить заказы" Command="{Binding LoadOrdersCommand}" Margin="0,0,10,0"/>
                <Button Content="Обработать заказ" Command="{Binding ProcessOrderCommand}" 
                        Background="#2ecc71" Foreground="White" Margin="0,0,10,0"/>
                <Button Content="Просмотр деталей" Command="{Binding ViewOrderDetailsCommand}" 
                        Background="#3498db" Foreground="White"/>
            </StackPanel>
        </StackPanel>

        <!-- Основное содержимое -->
        <TabControl Grid.Row="1" Margin="10">
            <TabItem Header="Заказы за сегодня">
                <DataGrid ItemsSource="{Binding TodayOrders}" AutoGenerateColumns="False"
                          SelectedItem="{Binding SelectedOrder}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="40"/>
                        <DataGridTextColumn Header="Магазин" Binding="{Binding StoreId}" Width="70"/>
                        <DataGridTextColumn Header="Дата" 
                                           Binding="{Binding OrderDate, StringFormat=dd.MM.yyyy}" Width="100"/>
                        <DataGridTextColumn Header="Сумма" Width="100">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Text" Value="{Binding Path=TotalAmount, StringFormat=N2}"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridCheckBoxColumn Header="Обработан" Binding="{Binding IsProcessed}" Width="80"/>
                        <DataGridTextColumn Header="Товаров" 
                                           Binding="{Binding Items.Count}" Width="70"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>

            <TabItem Header="Готовые к отгрузке">
                <DataGrid ItemsSource="{Binding PendingShipments}" AutoGenerateColumns="False"
                          SelectedItem="{Binding SelectedOrder}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="40"/>
                        <DataGridTextColumn Header="Магазин" Binding="{Binding StoreId}" Width="70"/>
                        <DataGridTextColumn Header="Дата" 
                                           Binding="{Binding OrderDate, StringFormat=dd.MM.yyyy}" Width="100"/>
                        <DataGridTextColumn Header="Сумма" Width="100">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Text" Value="{Binding Path=TotalAmount, StringFormat=N2}"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Товаров" 
                                           Binding="{Binding Items.Count}" Width="70"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>

            <TabItem Header="Все заказы">
                <DataGrid ItemsSource="{Binding AllOrders}" AutoGenerateColumns="False"
                          SelectedItem="{Binding SelectedOrder}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="40"/>
                        <DataGridTextColumn Header="Магазин" Binding="{Binding StoreId}" Width="70"/>
                        <DataGridTextColumn Header="Дата" 
                                           Binding="{Binding OrderDate, StringFormat=dd.MM.yyyy}" Width="100"/>
                        <DataGridTextColumn Header="Сумма" Width="100">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Text" Value="{Binding Path=TotalAmount, StringFormat=N2}"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridCheckBoxColumn Header="Обработан" Binding="{Binding IsProcessed}" Width="80"/>
                        <DataGridTextColumn Header="Товаров" 
                                           Binding="{Binding Items.Count}" Width="70"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>