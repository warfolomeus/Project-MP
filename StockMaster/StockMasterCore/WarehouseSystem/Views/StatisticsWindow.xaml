<UserControl x:Class="WarehouseApp.Views.StatisticsWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок и кнопки -->
        <StackPanel Grid.Row="0" Margin="10">
            <TextBlock Text="Статистика работы склада" FontSize="20" FontWeight="Bold"/>
            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <Button Content="Обновить" Command="{Binding RefreshCommand}" Margin="0,0,10,0"/>
                <TextBlock Text="Статистика за весь период моделирования" 
                           VerticalAlignment="Center" Margin="20,0,0,0"/>
            </StackPanel>
        </StackPanel>

        <!-- Основное содержимое -->
        <ScrollViewer Grid.Row="1" Margin="10">
            <StackPanel>
                <!-- Общая статистика -->
                <GroupBox Header="Основная статистика" Margin="0,0,0,15">
                    <DataGrid ItemsSource="{Binding StatsItems}" AutoGenerateColumns="False" 
                              IsReadOnly="True" Height="350">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Показатель" Binding="{Binding Key}" Width="250"/>
                            <DataGridTextColumn Header="Значение" Binding="{Binding Value}" Width="200"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </GroupBox>

                <!-- Ключевые показатели -->
                <GroupBox Header="Ключевые показатели эффективности" Margin="0,0,0,15">
                    <WrapPanel Margin="10">
                        <Border Margin="5" Padding="15" BorderBrush="#27ae60" BorderThickness="2" 
                                Background="#ecf0f1" Width="250" Height="120">
                            <StackPanel>
                                <TextBlock Text="Чистая прибыль" FontWeight="SemiBold" FontSize="14"/>
                                <TextBlock Text="{Binding Statistics.NetProfit, StringFormat=N2}" FontSize="24" 
                                           Foreground="#27ae60" FontWeight="Bold" Margin="0,5,0,0"/>
                                <TextBlock Text="руб." FontSize="12" Foreground="#7f8c8d"/>
                            </StackPanel>
                        </Border>

                        <Border Margin="5" Padding="15" BorderBrush="#3498db" BorderThickness="2" 
                                Background="#ecf0f1" Width="250" Height="120">
                            <StackPanel>
                                <TextBlock Text="Общая выручка" FontWeight="SemiBold" FontSize="14"/>
                                <TextBlock Text="{Binding Statistics.TotalRevenue, StringFormat=N2}" FontSize="24" 
                                           Foreground="#3498db" FontWeight="Bold" Margin="0,5,0,0"/>
                                <TextBlock Text="руб." FontSize="12" Foreground="#7f8c8d"/>
                            </StackPanel>
                        </Border>

                        <Border Margin="5" Padding="15" BorderBrush="#e74c3c" BorderThickness="2" 
                                Background="#ecf0f1" Width="250" Height="120">
                            <StackPanel>
                                <TextBlock Text="Общие убытки" FontWeight="SemiBold" FontSize="14"/>
                                <TextBlock Text="{Binding Statistics.TotalLosses, StringFormat=N2}" FontSize="24" 
                                           Foreground="#e74c3c" FontWeight="Bold" Margin="0,5,0,0"/>
                                <TextBlock Text="руб." FontSize="12" Foreground="#7f8c8d"/>
                            </StackPanel>
                        </Border>
                    </WrapPanel>
                </GroupBox>

                <!-- Дополнительная информация -->
                <GroupBox Header="Дополнительная информация">
                    <WrapPanel Margin="10">
                        <Border Margin="5" Padding="15" BorderBrush="#f39c12" BorderThickness="2" 
                                Background="#ecf0f1" Width="250" Height="100">
                            <StackPanel>
                                <TextBlock Text="Всего продано" FontWeight="SemiBold" FontSize="12"/>
                                <TextBlock Text="{Binding Statistics.TotalProductsSold}" FontSize="20" 
                                           Foreground="#f39c12" FontWeight="Bold"/>
                                <TextBlock Text="единиц товара" FontSize="10" Foreground="#7f8c8d"/>
                            </StackPanel>
                        </Border>

                        <Border Margin="5" Padding="15" BorderBrush="#9b59b6" BorderThickness="2" 
                                Background="#ecf0f1" Width="250" Height="100">
                            <StackPanel>
                                <TextBlock Text="Средние продажи/день" FontWeight="SemiBold" FontSize="12"/>
                                <TextBlock Text="{Binding Statistics.AverageDailySales, StringFormat=N2}" FontSize="20" 
                                           Foreground="#9b59b6" FontWeight="Bold"/>
                                <TextBlock Text="единиц" FontSize="10" Foreground="#7f8c8d"/>
                            </StackPanel>
                        </Border>
                    </WrapPanel>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>