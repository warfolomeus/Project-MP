<UserControl x:Class="WarehouseApp.Views.SupplyRequestsWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок и кнопки -->
        <StackPanel Grid.Row="0" Margin="10">
            <TextBlock Text="Заявки поставщикам" FontSize="20" FontWeight="Bold"/>
            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <Button Content="Обновить" Command="{Binding RefreshCommand}" Margin="0,0,10,0"/>
                <Button Content="Загрузить заявки" Command="{Binding LoadRequestsCommand}" Margin="0,0,10,0"/>
                <Button Content="Выполнить заявку" Command="{Binding FulfillRequestCommand}" 
                        Background="#2ecc71" Foreground="White" Margin="0,0,10,0"/>
                <Button Content="Создать заявку" Command="{Binding CreateRequestCommand}" 
                        Background="#3498db" Foreground="White"/>
            </StackPanel>
        </StackPanel>

        <!-- Основное содержимое -->
        <TabControl Grid.Row="1" Margin="10">
            <TabItem Header="Ожидающие заявки">
                <DataGrid ItemsSource="{Binding PendingRequests}" AutoGenerateColumns="False"
                          SelectedItem="{Binding SelectedRequest}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="40"/>
                        <DataGridTextColumn Header="ID товара" Binding="{Binding ProductId}" Width="70"/>
                        <DataGridTextColumn Header="Количество" Binding="{Binding Quantity}" Width="80"/>
                        <DataGridTextColumn Header="Дата заявки" 
                                           Binding="{Binding RequestDate, StringFormat=dd.MM.yyyy}" Width="100"/>
                        <DataGridTextColumn Header="Ожидаемая поставка" 
                                           Binding="{Binding ExpectedDeliveryDate, StringFormat=dd.MM.yyyy}" Width="120"/>
                        <DataGridCheckBoxColumn Header="Выполнена" Binding="{Binding IsFulfilled}" Width="80"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>

            <TabItem Header="Все заявки">
                <DataGrid ItemsSource="{Binding AllRequests}" AutoGenerateColumns="False"
                          SelectedItem="{Binding SelectedRequest}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="40"/>
                        <DataGridTextColumn Header="ID товара" Binding="{Binding ProductId}" Width="70"/>
                        <DataGridTextColumn Header="Количество" Binding="{Binding Quantity}" Width="80"/>
                        <DataGridTextColumn Header="Дата заявки" 
                                           Binding="{Binding RequestDate, StringFormat=dd.MM.yyyy}" Width="100"/>
                        <DataGridTextColumn Header="Ожидаемая поставка" 
                                           Binding="{Binding ExpectedDeliveryDate, StringFormat=dd.MM.yyyy}" Width="120"/>
                        <DataGridCheckBoxColumn Header="Выполнена" Binding="{Binding IsFulfilled}" Width="80"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>