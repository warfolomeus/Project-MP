<UserControl x:Class="WarehouseApp.Views.SupplyRequestsWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <StackPanel Grid.Row="0" Margin="10">
            <TextBlock Text="Заявки поставщикам" FontSize="20" FontWeight="Bold"/>
            <TextBlock Text="Список заявок на пополнение запасов товаров" Margin="0,5,0,0"/>
            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <Button Content="Выполнить выбранные" Command="{Binding FulfillSelectedCommand}"
                        Background="#2ecc71" Foreground="White" Width="150"/>
            </StackPanel>
        </StackPanel>

        <!-- Основная область -->
        <Grid Grid.Row="1" Margin="10">

            <!-- Сообщение когда нет заявок -->
            <TextBlock Text="Нет активных заявок поставщикам. Заявки создаются автоматически при низком запасе товаров." 
                       HorizontalAlignment="Center" VerticalAlignment="Center"
                       TextAlignment="Center" TextWrapping="Wrap"
                       FontSize="16" Foreground="Gray" Width="400">
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding WrappedRequests.Count}" Value="0">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>

            <!-- Таблица когда есть заявки -->
            <DataGrid x:Name="RequestsGrid" 
                      ItemsSource="{Binding WrappedRequests}" 
                      AutoGenerateColumns="False"
                      SelectionMode="Extended" 
                      SelectionUnit="FullRow"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      IsReadOnly="False">
                <!-- Изменено с True на False -->
                <DataGrid.Style>
                    <Style TargetType="DataGrid">
                        <Setter Property="Visibility" Value="Visible"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding WrappedRequests.Count}" Value="0">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.Style>
                <DataGrid.Columns>
                    <DataGridCheckBoxColumn Header="Выбор" 
                                          Binding="{Binding IsSelected, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                          Width="50"
                                          IsReadOnly="False"/>
                    <!-- Разрешить редактирование -->
                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50" IsReadOnly="True"/>
                    <DataGridTextColumn Header="ID товара" Binding="{Binding ProductId}" Width="80" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Количество" Binding="{Binding Quantity}" Width="100" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Дата заявки" 
                                       Binding="{Binding RequestDate, StringFormat=dd.MM.yyyy}" 
                                       Width="120" 
                                       IsReadOnly="True"/>
                    <DataGridTextColumn Header="Ожидаемая поставка" 
                                       Binding="{Binding ExpectedDeliveryDate, StringFormat=dd.MM.yyyy}" 
                                       Width="140" 
                                       IsReadOnly="True"/>
                    <DataGridTextColumn Header="Статус" 
                                       Binding="{Binding Status}" 
                                       Width="80"
                                       IsReadOnly="True"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>

        <!-- Статусная строка -->
        <Border Grid.Row="2" Background="#f8f9fa" Padding="10">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Выбрано: " FontWeight="Bold"/>
                <TextBlock Text="{Binding ElementName=RequestsGrid, Path=SelectedItems.Count}"/>
                <TextBlock Text=" из " Margin="5,0,0,0"/>
                <TextBlock Text="{Binding WrappedRequests.Count}"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>