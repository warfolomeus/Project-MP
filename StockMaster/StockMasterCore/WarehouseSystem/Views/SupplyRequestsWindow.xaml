<UserControl x:Class="WarehouseApp.Views.SupplyRequestsWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <StackPanel Grid.Row="0" Margin="10">
            <TextBlock Text="Заявки поставщикам" FontSize="20" FontWeight="Bold"/>
            <TextBlock Text="Список заявок на пополнение запасов товаров" Margin="0,5,0,0"/>
            <Button Content="Обновить" Command="{Binding RefreshCommand}" 
                    Margin="0,10,0,0" Width="100" HorizontalAlignment="Left"/>
        </StackPanel>

        <!-- Основная область -->
        <Grid Grid.Row="1" Margin="10">

            <!-- Сообщение когда нет заявок -->
            <TextBlock Text="Нет активных заявок поставщикам. Заявки создаются автоматически при низком запасе товаров." 
                       HorizontalAlignment="Center" VerticalAlignment="Center"
                       TextAlignment="Center" TextWrapping="Wrap"
                       FontSize="16" Foreground="Gray" Width="400">
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding PendingRequests.Count}" Value="0">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>

            <!-- Таблица когда есть заявки -->
            <DataGrid ItemsSource="{Binding PendingRequests}" AutoGenerateColumns="False">
                <DataGrid.Style>
                    <Style TargetType="DataGrid">
                        <Setter Property="Visibility" Value="Visible"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding PendingRequests.Count}" Value="0">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.Style>
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                    <DataGridTextColumn Header="ID товара" Binding="{Binding ProductId}" Width="80"/>
                    <DataGridTextColumn Header="Количество" Binding="{Binding Quantity}" Width="100"/>
                    <DataGridTextColumn Header="Дата заявки" 
                                       Binding="{Binding RequestDate, StringFormat=dd.MM.yyyy}" Width="120"/>
                    <DataGridTextColumn Header="Ожидаемая поставка" 
                                       Binding="{Binding ExpectedDeliveryDate, StringFormat=dd.MM.yyyy}" Width="140"/>
                    <DataGridCheckBoxColumn Header="Выполнена" Binding="{Binding IsFulfilled}" Width="80" IsReadOnly="True"/>
                    <DataGridTemplateColumn Header="Действие" Width="100">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Выполнить" 
                                        Command="{Binding DataContext.FulfillRequestCommand, 
                                                RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        CommandParameter="{Binding}"
                                        Background="#2ecc71" Foreground="White"
                                        Padding="5,2">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="IsEnabled" Value="True"/>
                                            <Setter Property="Background" Value="#2ecc71"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsFulfilled}" Value="True">
                                                    <Setter Property="IsEnabled" Value="False"/>
                                                    <Setter Property="Background" Value="#95a5a6"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Grid>
</UserControl>