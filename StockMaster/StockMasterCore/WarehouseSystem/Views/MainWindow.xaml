<Window x:Class="WarehouseApp.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WarehouseApp.Views"
        xmlns:vm="clr-namespace:WarehouseApp.ViewModels"
        mc:Ignorable="d"
        Title="Система управления оптовым складом" 
        Height="700" Width="1200"
        WindowStartupLocation="CenterScreen">

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <DataTemplate DataType="{x:Type vm:SimulationSetupViewModel}">
            <local:SimulationSetupWindow/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:WarehouseDashboardViewModel}">
            <local:WarehouseDashboard/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:ProductsViewModel}">
            <local:ProductsWindow/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:OrdersViewModel}">
            <local:OrdersWindow/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:SupplyRequestsViewModel}">
            <local:SupplyRequestsWindow/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:StatisticsViewModel}">
            <local:StatisticsWindow/>
        </DataTemplate>
    </Window.Resources>

    <DockPanel>
        <!-- Заголовок -->
        <Border DockPanel.Dock="Top" Background="#2c3e50" Height="60">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="СИСТЕМА УПРАВЛЕНИЯ ОПТОВЫМ СКЛАДОМ" 
                         Foreground="White" FontSize="18" FontWeight="Bold" Margin="20,0"/>
            </StackPanel>
        </Border>

        <!-- Панель навигации слева -->
        <Border DockPanel.Dock="Left" Width="220" Background="#34495e">
            <StackPanel Margin="10">
                <TextBlock Text="Навигация" Foreground="White" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>

                <Button Content="📋 Настройка симуляции" 
                        Command="{Binding ShowSimulationSetupCommand}"
                        Background="Transparent" Foreground="White"
                        BorderThickness="0" HorizontalContentAlignment="Left"
                        Padding="10" Margin="0,2" Height="40" FontSize="14"/>

                <Button Content="📊 Панель управления" 
                        Command="{Binding ShowDashboardCommand}"
                        Background="Transparent" Foreground="White"
                        BorderThickness="0" HorizontalContentAlignment="Left"
                        Padding="10" Margin="0,2" Height="40" FontSize="14"/>

                <Button Content="🛒 Товары и уценки" 
                        Command="{Binding ShowProductsCommand}"
                        Background="Transparent" Foreground="White"
                        BorderThickness="0" HorizontalContentAlignment="Left"
                        Padding="10" Margin="0,2" Height="40" FontSize="14"/>

                <Button Content="📦 Заказы магазинов" 
                        Command="{Binding ShowOrdersCommand}"
                        Background="Transparent" Foreground="White"
                        BorderThickness="0" HorizontalContentAlignment="Left"
                        Padding="10" Margin="0,2" Height="40" FontSize="14"/>

                <Button Content="🚚 Поставки" 
                        Command="{Binding ShowSupplyRequestsCommand}"
                        Background="Transparent" Foreground="White"
                        BorderThickness="0" HorizontalContentAlignment="Left"
                        Padding="10" Margin="0,2" Height="40" FontSize="14"/>

                <Button Content="📈 Статистика" 
                        Command="{Binding ShowStatisticsCommand}"
                        Background="Transparent" Foreground="White"
                        BorderThickness="0" HorizontalContentAlignment="Left"
                        Padding="10" Margin="0,2" Height="40" FontSize="14"/>

                <Separator Margin="0,20,0,10" Background="#7f8c8d"/>

                <Button Content="▶ Обработать день" 
                        Command="{Binding ProcessDayCommand}"
                        Background="#3498db" Foreground="White"
                        Margin="0,5" Height="40" FontWeight="Bold"
                        BorderThickness="0"/>

                <Button Content="🗑️ Сбросить систему" 
                        Command="{Binding ResetCommand}"
                        Background="#e74c3c" Foreground="White"
                        Margin="0,5" Height="40" FontWeight="Bold"
                        BorderThickness="0"/>
            </StackPanel>
        </Border>

        <!-- Основная область -->
        <Border Background="White">
            <ContentControl Content="{Binding CurrentView}"/>
        </Border>

        <!-- Статус бар -->
        <Border DockPanel.Dock="Bottom" Height="30" Background="#ecf0f1">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="10,0">
                <TextBlock Text="День:"/>
                <TextBlock Text="{Binding Path=CurrentView.Statistics.CurrentDay}" 
                           FontWeight="Bold" Margin="5,0,10,0"/>
                <TextBlock Text="из"/>
                <TextBlock Text="{Binding Path=CurrentView.Config.SimulationDays}" 
                           FontWeight="Bold" Margin="5,0,20,0"/>
                <TextBlock Text="| Выручка:" Margin="10,0,5,0"/>
                <TextBlock Text="{Binding Path=CurrentView.Statistics.TotalRevenue, StringFormat=N2}" 
                           FontWeight="Bold" Margin="0,0,5,0"/>
                <TextBlock Text="руб."/>
            </StackPanel>
        </Border>
    </DockPanel>
</Window>